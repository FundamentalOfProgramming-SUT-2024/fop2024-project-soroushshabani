            case 's': strcpy(spell_name, "speed"); strcpy(spell_icon, speed_ICON); break;
            case 'h': strcpy(spell_name, "health"); strcpy(spell_icon, health_ICON); break;
            case 'd': strcpy(spell_name, "damage"); strcpy(spell_icon, damage_ICON); break;
