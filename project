    mvprintw(start_y + 1, x_offset, "â–‘â–’â–“â–ˆâ–“â–’â–‘     â–‘â–’â–“â–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–“â–’â–‘â–’â–“â–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–“â–’â–‘             â–‘â–’â–“â–ˆâ–“â–’â–‘â–’â–“â–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–“â–’â–‘      â–‘â–’â–“â–ˆâ–“â–’â–‘â–’â–“â–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–“â–’â–‘ ");
    mvprintw(start_y + 2, x_offset, "â–‘â–’â–“â–ˆâ–“â–’â–‘     â–‘â–’â–“â–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–“â–’â–‘â–’â–“â–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–“â–’â–‘             â–‘â–’â–“â–ˆâ–“â–’â–‘â–’â–“â–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–“â–’â–‘      â–‘â–’â–“â–ˆâ–“â–’â–‘â–’â–“â–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–“â–’â–‘ ");
    mvprintw(start_y + 3, x_offset, "â–‘â–’â–“â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–“â–’â–‘â–’â–“â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–“â–’â–‘        â–‘â–’â–“â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–“â–’â–‘ ");
    mvprintw(start_y + 4, x_offset, "â–‘â–’â–“â–ˆâ–“â–’â–‘     â–‘â–’â–“â–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–“â–’â–‘â–’â–“â–ˆâ–“â–’â–‘             â–‘â–’â–“â–ˆâ–“â–’â–‘      â–‘â–’â–“â–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–“â–’â–‘â–’â–“â–ˆâ–“â–’â–‘             â–‘â–’â–“â–ˆâ–“â–’â–‘ ");
    mvprintw(start_y + 5, x_offset, "â–‘â–’â–“â–ˆâ–“â–’â–‘     â–‘â–’â–“â–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–“â–’â–‘â–’â–“â–ˆâ–“â–’â–‘             â–‘â–’â–“â–ˆâ–“â–’â–‘      â–‘â–’â–“â–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–“â–’â–‘â–’â–“â–ˆâ–“â–’â–‘             â–‘â–’â–“â–ˆâ–“â–’â–‘ ");
    mvprintw(start_y + 6, x_offset, "â–‘â–’â–“â–ˆâ–“â–’â–‘      â–‘â–’â–“â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–“â–’â–‘             â–‘â–’â–“â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–“â–’â–‘â–’â–“â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–“â–’â–‘â–’â–“â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–“â–’â–‘      â–‘â–’â–“â–ˆâ–“â–’â–‘ ");

    // Ø®Ø· Ø¬Ø¯Ø§Ú©Ù†Ù†Ø¯Ù‡
    mvhline(start_y + 7, (COLS - 50) / 2, '-', 50);

    // Ù…ØªÙ† Ú†Ø´Ù…Ú©â€ŒØ²Ù†
    attron(A_BOLD | A_BLINK);
    mvprintw(start_y + 10, (COLS - 20) / 2, "ğŸ”¥ WELCOME TO FOP 2024 ğŸ”¥");
    attroff(A_BOLD | A_BLINK);

    // Ù¾ÛŒØ§Ù… ØªØ§ÛŒÙ¾ Ø´ÙˆÙ†Ø¯Ù‡
    type_text("Press ENTER to continue...", start_y + 12, (COLS - 20) / 2);

    // Ø¬Ù…Ù„Ù‡ Ø§Ù†Ú¯ÛŒØ²Ø´ÛŒ
    mvprintw(start_y + 14, (COLS - 40) / 2, "\"The journey of a thousand miles begins with one step.\"");

    attroff(COLOR_PAIR(1));
    refresh();

    // Ø§Ù†ÛŒÙ…ÛŒØ´Ù† Ø¨Ø§Ø±Ú¯Ø°Ø§Ø±ÛŒ
    show_loading_animation();

    while (getch() != '\n');  // Ø§Ù†ØªØ¸Ø§Ø± Ø¨Ø±Ø§ÛŒ Enter
}
int main() {
    setlocale(LC_ALL, "");
    FILE *file = fopen("usersfile", "a+b");
    if (!file) {
        perror("Error opening file");
        return 1;
    }

    initscr();
    cbreak();
    noecho();
    keypad(stdscr, TRUE);

    while (1) {  // Ø­Ù„Ù‚Ù‡ Ø¨ÛŒâ€ŒÙ†Ù‡Ø§ÛŒØª Ø¨Ø±Ø§ÛŒ Ø¨Ø§Ø²Ú¯Ø´Øª Ø¨Ù‡ Ù…Ù†Ùˆ Ù¾Ø³ Ø§Ø² Game Over
        show_ascii_art();  // Ù†Ù…Ø§ÛŒØ´ FOP 2024 Ø¨Ø§ ASCII Art
        show_loading_animation();
        const char *choices[] = {"Register", "Login", "Forgot Password", "Login as Guest", "Exit"};
        show_menu(choices, 5, file);
    }

    fclose(file);
    endwin();
    return 0;
}
