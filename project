    char name[ITEM_NAME_LENGTH];
    char type[ITEM_NAME_LENGTH];
    int damage;
} Item;
typedef struct {
    int player_x, player_y; // موقعیت بازیکن
    int player_hp;
    int hunger;
    int speed_move_counter;  // شمارنده برای بررسی گرسنگی هنگام استفاده از طلسم Speed
    int food_count;
    int gold_count;
