            if (map[y][x] == 'D') {
                return; // A wand is already placed, exit the function
            }
        }
    }
        do {
            dagger_x = room->x + 1 + rand() % (room->width - 2);
            dagger_y = room->y + 1 + rand() % (room->height - 2);
