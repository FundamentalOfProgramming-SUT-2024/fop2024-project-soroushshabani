    int inventory_count;
    Room rooms[MAX_ROOMS];  // ذخیره‌ی اتاق‌ها
    char map[MAX_ROWS][MAX_COLS]; // ذخیره‌ی نقشه
} GameState;
typedef struct {
    int x, y;        // موقعیت هیولا
    int hp;          // سلامتی هیولا
    int active;      // آیا هیولا فعال است یا خیر
    int room_index;  // شاخص اتاق که هیولا در آن قرار دارد
    int move_count;
} Monster;
